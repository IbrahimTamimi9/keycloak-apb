apiVersion: v1
kind: Secret
metadata:
  name: keycloak-bearer-client
  namespace: {{ namespace }}
stringData:
  name: keycloak-bearer
  installation: "{{ installationbearer | regex_replace('(u\'|\')', '\\\"') | replace(': True', ': true') }}"
  type: keycloak-bearer  
  uri: http://{{ keycloak_route.stdout }}
  client_id: {{ generated_username.stdout }}
  client_secret: {{ generated_password.stdout }}
